// To find the roots of a quadratic equation i.e. ax^2+bx+c

#include<iostream>
#include<math.h>
using namespace std;
int main()
{

	float	p,q,r,D,x1,x2;
	
	cout<< "Write the value of p " ;
	cin>>p;
	
	cout<< "Write the value of q " ;
	cin>>q;
	
	cout<<"Write the value of r " ;
	cin>>r;
	
	D= sqrt(q*q-4*p*r);
	cout<<"The value of discriminant is " <<D <<endl;
	
	x1=	(-q+D)/(2*p);
	x2=	(-q-D)/(2*p);
	cout<<"The roots are " <<x1<< ", "<< x2;
	




}
